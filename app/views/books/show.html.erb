<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		<tbody>
  		  <tr>
          <td><%= link_to(@books.user) do %>
            <%= image_tag @books.user.get_profile_image, size:"50x50" %><br>
            <%= @books.user.name %>
            <% end %>
          </td>
          <td><%= link_to @books.title, @book %></td>
          <td><%= @books.body %></td>
          <% if @user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@books), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @books, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
            <% end %>

          <% if @books.favorited_by?(current_user) %>
            <td><%= link_to book_favorites_path(@books), method: :delete do %>♥<%= @books.favorites.count %></td>

            <% end %>

            <% else %>

            <td><%= link_to book_favorites_path(@books), method: :post do %>♡<%= @books.favorites.count %></td>

            <% end %>

          <% end %>
          <td>コメント件数：<%= @books.book_comments.count %></td>
        </tr>
        </tbody>

         <tbody>
         <% @books.book_comments.each do |book_comment| %>
         <td><%= image_tag book_comment.user.get_profile_image, size:"50x50"  %></td>
         <td><%= book_comment.user.name %></td>
         <td><%= book_comment.created_at.strftime('%Y/%m/%d') %></td>
         <td><%= book_comment.comment %></td>
         <% if book_comment.user == current_user %>
         <td><%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete %></td>
         </tr>
         </tbody>
         <% end %>
         <% end %>
        </div>
        </table>

         <div class='col-md-8'>
         <tbody>
         <tr>
         <td><%= form_with model: [@books, @book_comment] do |f| %></td>
         <td><%= f.text_area :comment, rows: '5', cols: '80', placeholder: "コメントをここに" %>
         <%= f.submit "送信" %></td>
         <% end %>
         </tr>
        </tbody>
        </div>


  </div>
</div>