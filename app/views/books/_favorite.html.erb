<% if @books.favorited_by?(current_user) %>
<%= link_to book_favorites_path(@books), method: :delete remote: true, data: {"turbolinks" => false} do %>♥<%= @books.favorites.count %>

<% end %>

<% else %>

<%= link_to book_favorites_path(@books), method: :post remote: true, data: {"turbolinks" => false} do %>♡<%= @books.favorites.count %>

<% end %>

<% end %>