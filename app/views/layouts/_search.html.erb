
<% if user_signed_in? %>
<div style="text-align:center;">
<div class="search_form">
  <%= form_with url: search_path, local:true, method: :get do |f| %>
  <%= f.text_field :word %>
  <%= f.select :range, options_for_select([['User'], ['Book']]) %>
  <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"], ["後方一致","backword_match"], ["部分一致","partial_match"]]) %>
  <%= f.submit "検索", class: "btn-sm btn-primary" %>
 <%= form_with url: tagsearches_search_path,method: :get, local: true do |f| %>
<td><%= f.text_field :content %></td>
<td><%= f.submit'タグ検索' %></td>
<% end %>
<% end %>

</div>
</div>
<% end %>

