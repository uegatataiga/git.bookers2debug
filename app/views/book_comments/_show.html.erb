 <div class='col-md-8'>
 <h4>Bookcomments</h4>
 <table class='table'>
 <tbody>

 <% books.book_comments.each do |book_comment| %>
 <tr>
 <td><%= image_tag book_comment.user.get_profile_image, size:"50x50"  %></td>
 <td><%= book_comment.user.name %></td>
 <td><%= book_comment.created_at.strftime('%Y/%m/%d') %></td>
 <td><%= book_comment.comment %></td>
 <% if book_comment.user == current_user %>
 <td><%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, data: {"turbolinks" => false} %></td>
 <% end %>
 </tr>

 <% end %>
 </tbody>
 </table>
 </div>
